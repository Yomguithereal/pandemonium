  },
  "homepage": "https://github.com/yomguithereal/pandemonium#readme",
  "devDependencies": {
    "@yomguithereal/eslint-config": "^4.0.0",
    "eslint": "^7.13.0",
    "mocha": "^8.2.1",
    "seedrandom": "^3.0.5",
    "typescript": "^4.1.2"
  },
  "eslintConfig": {
